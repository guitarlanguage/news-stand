<div class="login">
  <div class="container">

    <%= form_for(:session, url: login_path) do |f| %>
        <%= f.text_field :email, :placeholer => "Email" %>
        <%= f.text_field :password, :placeholder => "Password" %>
        <%= f.submit 'Log in', class: 'btn-submit' %>
    <% end %>
  </div>
</div>